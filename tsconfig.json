{
  "compilerOptions": {
    "target": "ES2020",
    // "module": "NodeNext",
    // "moduleResolution": "NodeNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
